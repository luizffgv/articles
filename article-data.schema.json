{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Article metadata",
  "description": "Metadata for an article",
  "type": "object",
  "properties": {
    "date": {
      "description": "Date in which the article was initially written",
      "type": "string",
      "format": "date"
    },
    "tags": {
      "description": "Tags for the article",
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    }
  },
  "required": ["date", "tags"]
}
